// room script file

function typeWriter(String message) {
 
  int length=message.Length;
  int i = 0;
  String aux="";

  while(i<length){
    aux=aux.Append(message.Substring(i, 1));
    player.SayBackground(aux);
    Wait(4);
    i++;
   }
}

